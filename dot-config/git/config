[user]
        name = Peter Vlk
        email = petervlk86@gmail.com

[core]
        autocrlf = input
        editor = nvim

[fetch]
        prune = true
	
[diff]
        tool = nvimdiff

[merge]
        tool = nvimdiff
        conflictstyle = zdiff3

[mergetool]
        prompt = false
        keepBackup = false

[mergetool "nvimdiff"]
        layout = "LOCAL,BASE,REMOTE / MERGED"

        # remove linematch option for mergetool
        # https://github.com/neovim/neovim/issues/22696#issuecomment-2796545495
        cmd = nvim -d -c \"set diffopt-=linematch:40\" -c '4wincmd w | wincmd J' \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"

## REuse REcorded REsolution
#
# remember how merge conflicts were resolved
# example: resolve conflicts during rebase
[rerere]
	enabled = true

[url "ssh://git@github.com/"]
        insteadOf = https://github.com/

[init]
	defaultBranch = main
